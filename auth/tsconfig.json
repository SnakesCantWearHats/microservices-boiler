{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["es6"],
		"outDir": "dist",
		"rootDir": "src",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"incremental": true,
		"strictPropertyInitialization": false,
		"types": ["reflect-metadata", "jest"],
		"typeRoots": ["./types", "./node_modules/@types"],
		"strict": true,
		"declaration": true,
		"sourceMap": true
	},
	"include": [
		"./src/**/*",
		"./src/**/*.ts"
	],
	"exclude": [
		"**/tests/*.test.ts",
		"node-modules",
		"jest-config.js"
	]
}
