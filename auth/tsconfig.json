{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["es6"],
		"outDir": "dist",
		"rootDir": "src",
		"allowJs": true,
		"types": ["reflect-metadata"],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"incremental": true
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node-modules",
		"jest-config.js"
	]
}
